package com.nowytutorial.gfx;

import java.awt.image.BufferedImage;

public class Assets {
	
	private static final int width = 52, height = 52;
	
	public static BufferedImage up, left, right, down;
	
	public static void init(){
		SpriteSheet sheet = new SpriteSheet(ImageLoader.loadImage("/textures/spricik.jpg"));
		
		up = sheet.crop(0, 0, width, height);
		left = sheet.crop(0, height, width, height);
		right = sheet.crop(width, height, width, height);
		down = sheet.crop(width, 0, width, height);
	}

}
